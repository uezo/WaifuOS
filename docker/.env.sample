COMPOSE_PROJECT_NAME=waifuos

# =====================================
# Quick start
# =====================================

# Required
OPENAI_API_KEY=

# Option (for OpenAI-compatible APIs)
# OPENAI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/  # Gemini on Google AI Studio
# OPENAI_BASE_URL=https://api.x.ai/v1               # Grok
# OPENAI_BASE_URL=https://api.anthropic.com/v1/     # Claude on Anthropic

# Option (STT for WebSocket and TTS for non-Japanese languages)
AZURE_SPEECH_API_KEY=
AZURE_SPEECH_REGION=


# =====================================
# PostgreSQL
# =====================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB_PORT=15432

# =====================================
# PgAdmin
# =====================================
PGADMIN_USER=pgadmin@example.com
PGADMIN_PASSWORD=youmustchangethis
PGADMIN_DEFAULT_EMAIL=pgadmin@example.com
PGADMIN_DEFAULT_PASSWORD=youmustchangethis
PGADMIN_CONFIG_SERVER_MODE=True
PGADMIN_PORT=8100

# =====================================
# Global Application Settings
# =====================================
TIMEZONE=Asia/Tokyo

# Data storage path (for external disk mounting)
# Examples:
#   DATA_PATH=../data                    # Local directory (default)
#   DATA_PATH=/mnt/external-disk/waifuos   # External disk
DATA_PATH=../data

# =====================================
# AIAvatarKit
# =====================================
AIAVATAR_PORT=8300
AIAVATAR_MAIN_MODULE=run
AIAVATAR_DEBUG=false
AIAVATAR_LOG_LEVEL=INFO
# AIAVATAR_API_KEY=sk-my-waifu
AIAVATAR_COT_ANSWER=answer
AIAVATAR_DAY_BOUNDARY_TIME=3

# Database
AIAVATAR_DB_NAME=aiavatar
AIAVATAR_DB_USER=aiavatar-runtime
AIAVATAR_DB_PASSWORD=aiavatar-runtime-password

# VAD
VAD_SILENCE_DURATION_THRESHOLD=0.7

# STT
STT_SERVICE=azure
STT_LANGUAGE=ja-JP
STT_OPENAI_API_KEY=
STT_AZURE_API_KEY=
STT_AZURE_REGION=

# LLM
LLM_SERVICE=openai
LLM_MODEL=gpt-5
LLM_TEMPERATURE=0.5 # Ignored when gpt-5
LLM_REASONING_EFFORT=minimal
LLM_OPENAI_API_KEY=
LLM_OPENAI_BASE_URL=

# LLM for evaluation
EVAL_LLM_SERVICE=openai
EVAL_LLM_MODEL=gpt-4.1
EVAL_LLM_TEMPERATURE=0.0
EVAL_LLM_OPENAI_API_KEY=
EVAL_LLM_OPENAI_BASE_URL=

# TTS
TTS_SPEECH_GATEWAY=True
TTS_SPEECH_GATEWAY_URL=http://speech-gateway:8000/tts

# Long-term Memory
AIAVATAR_LONGTERM_MEMORY_ENABLED=True

# Langfuse
# LANGFUSE_SECRET_KEY=sk-lf-XXXXXXXX
# LANGFUSE_PUBLIC_KEY=pk-lf-XXXXXXXX
# LANGFUSE_HOST=http://your.langfuse.server:3000


# =====================================
# Speech Gateway
# =====================================
SPGW_PORT=8200
SPGW_MAIN_MODULE=run
SPGW_DEBUG=false
SPGW_LOG_LEVEL=INFO

# Database
SPGW_DB_NAME=spgw
SPGW_DB_USER=spgw-runtime
SPGW_DB_PASSWORD=spgw-runtime-password

# Default service
SPGW_DEFAULT_SERVICE=voicevox

# Azure TTS
SPGW_AZURE_ENABLED=true
SPGW_AZURE_API_KEY=
SPGW_AZURE_REGION=
SPGW_AZURE_LANGUAGES=en-US,zh-CN,ko-KR,tl-PH,vi-VN,th-TH,id-ID
SPGW_AZURE_DEFAULT_SPEAKER=zh-CN-XiaoyuMultilingualNeural

# OpenAI TTS
SPGW_OPENAI_ENABLED=true
SPGW_OPENAI_API_KEY=
SPGW_OPENAI_LANGUAGES=en,ja,zh,ko
SPGW_OPENAI_DEFAULT_SPEAKER=shimmer

# VOICEVOX
SPGW_VOICEVOX_ENABLED=true
SPGW_VOICEVOX_URL=http://voicevox:50021
SPGW_VOICEVOX_DEFAULT_SPEAKER=2

# # AivisSpeech
# SPGW_AIVISSPEECH_ENABLED=true
# SPGW_AIVISSPEECH_URL=http://aivis-speech:10101

# Style-Bert-VITS2
SPGW_SBV2_ENABLED=true
SPGW_SBV2_URL=http://sbv2-api-lite:8000
SPGW_SBV2_DEFAULT_SPEAKER=0-0

# NIJIVOICE
SPGW_NIJIVOICE_ENABLED=false
SPGW_NIJIVOICE_API_KEY=


# =====================================
# VOICEVOX
# =====================================
VOICEVOX_PORT=8202

# =====================================
# AivisSpeech
# =====================================
AIVISSPEECH_PORT=8203

# =====================================
# Style-Bert-VITS2 API Lite
# =====================================
SBV2_PORT=8201
SBV2_MAIN_MODULE=run
SBV2_DEBUG=false
SBV2_LOG_LEVEL=INFO

# Infer and encoding config
SBV2_USE_GPU=false
SBV2_FFMPEG_PATH=ffmpeg
SBV2_MP3_BITRATE=64k

# =====================================
# ChatMemory
# =====================================
CM_PORT=8211
CM_MAIN_MODULE=run
CM_DEBUG=false
CM_LOG_LEVEL=INFO

# Database
CM_DB_NAME=chatmemory
CM_DB_USER=chatmemory-runtime
CM_DB_PASSWORD=chatmemory-runtime-password

# ChatMemory
CM_OPENAI_API_KEY=
CM_OPENAI_BASE_URL=https://api.openai.com/v1
CM_LLM_MODEL=gpt-4.1
CM_EMBEDDING_MODEL=text-embedding-3-large
